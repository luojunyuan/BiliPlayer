<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="BiliPlayer.View.Subtitles.SarchCurtain" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:BiliPlayer.View.Subtitles" xmlns:vm="clr-namespace:BiliPlayer.View.Subtitles.ViewModel" Background="#FFD3D3D3" ResizeMode="NoResize" Title="打开在线字幕" Height="140" Width="414">
  <FrameworkElement.Resources>
    <ResourceDictionary>
      <vm:SarchCurtain x:Key="dataContext" />
    </ResourceDictionary>
  </FrameworkElement.Resources>
  <StackPanel Name="root" Margin="4" DataContext="{StaticResource dataContext}">
    <Label Content="请输入弹幕网址：" />
    <TextBox Margin="4" Style="{DynamicResource SimpleTextBox}" Text="{Binding Input, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Delay=300}" />
    <DockPanel LastChildFill="False" Margin="0,4">
      <Label Content="{Binding Description}" />
      <Button Content="取消(_C)" Padding="5,0" Margin="4,0" DockPanel.Dock="Right" Style="{DynamicResource SimpleButton}" IsCancel="True" Click="onClose" />
      <Button Content="确定(_O)" Padding="5,0" Margin="4,0" DockPanel.Dock="Right" Style="{DynamicResource SimpleButton}" IsDefault="True" Command="{Binding ApplyCommand}" Click="onClose" />
    </DockPanel>
  </StackPanel>
</Window>