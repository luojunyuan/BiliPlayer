<?xml version="1.0" encoding="utf-8"?>
<ContextMenu x:Class="BiliPlayer.View.Player.Controls.MainMenu" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:BiliPlayer.View.Player.Controls">
  <FrameworkElement.Resources>
    <ResourceDictionary>
      <Style x:Key="{x:Static MenuItem.SeparatorStyleKey}" TargetType="{x:Type Separator}">
        <Setter Property="Margin" Value="0,-2" />
      </Style>
      <Style x:Key="{x:Type MenuItem}" TargetType="{x:Type MenuItem}">
        <Setter Property="FrameworkElement.DataContext" Value="{Binding Commands}" />
      </Style>
    </ResourceDictionary>
  </FrameworkElement.Resources>
  <MenuItem Header="打开..." Command="{Binding Open}" />
  <MenuItem Header="打开在线字幕..." Command="{Binding OpenOnlineTitle}" />
  <Separator />
  <MenuItem Header="暂停/播放" Command="{Binding TogglePlayPause}" />
  <MenuItem Header="停止" Command="{Binding Stop}" />
  <Separator />
  <MenuItem Header="前进30秒" Command="{Binding FastForward}" />
  <MenuItem Header="后退30秒" Command="{Binding Rewind}" />
  <Separator />
  <MenuItem Header="显示/隐藏弹幕" Command="{Binding HideTitle}" />
  <Separator />
  <MenuItem Header="设置(_S)" Command="{Binding Setting}" />
  <MenuItem Header="帮助(_H)" Command="{Binding Help}" />
</ContextMenu>